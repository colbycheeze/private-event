<% provide(:title, 'Log in / Sign up') %>
<h1>Log in with e-mail or Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Login or Register", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>